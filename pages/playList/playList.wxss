.playListContainer {
  height: 100%;
}

.InfoContainer {
  width: 100%;
  height: 300rpx;
  background-color: #CCCCFF;
}

.content {
  display: flex;
  padding: 30rpx;
}

.content image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 40rpx;
}

.content .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 允许换行 */
  flex-wrap: wrap;
  max-width: 400rpx;
  margin-left: 30rpx;
}

.title {
  color: white;
}

.author {
  color: #666;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.listContent {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}

.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .more {
  float: right;
}

.listItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.listItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.musicInfo text {
  display: flex;
  flex-direction: column;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musicInfo .author {
  display: flex;
  flex-direction: row;
}

.listItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
