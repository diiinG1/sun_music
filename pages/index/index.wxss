/* pages/index/index.wxss */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

.nav-container{
  display: flex;
}

.nav-item{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-item .iconfont{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  background: #9999ff;
  border-radius: 50%;
  color: white;
  margin: 20rpx 0;
}

.nav-item text{
  font-size: 26rpx;
}

.recommend-container{
  padding: 20rpx;
}

.recommend-content{
  display: flex;
  height: 300rpx;
}
.recommend-content .scroll-item{
  width: 200rpx;
  margin-right: 20rpx;
}
.recommend-content image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.scroll-item text{
  font-size: 26rpx;
  /* 单行文本溢出 省略号代替 */
  /* white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block; overflow针对块元素溢出 */

  /* 多行文本溢出 省略号代替 */
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2; /*设置行数*/
  -webkit-box-orient: vertical /*设置对齐模式为垂直*/
}
.topList{
  padding: 0rpx 20rpx;
}

.rankingSongList{
  height: 400rpx;
  padding: 0 20rpx;
}

.swiper-item .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.swiper-item{
  width: 96%;
  background: #fbfbfb;
}
.swiper-item .songItem{
  display: flex;
}
.swiper-item .songItem image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
}

.swiper-item .songItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}


.swiper-item .songItem .songName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}