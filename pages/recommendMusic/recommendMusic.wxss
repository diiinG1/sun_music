.listItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.listItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.listItem .musicInfo text{
  display: flex;
  flex-direction: column;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.listItem .iconfont{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}