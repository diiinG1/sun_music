/* pages/search/search.wxss */
.searchContainer {
    padding: 0 20rpx;
}

.header {
    display: flex;
    padding: 10rpx 0;
    height: 60rpx;
    line-height: 60rpx;
}

.searchInput {
    position: relative;
    flex: 1;
}

.searchIcon {
    position: absolute;
    left: 15rpx;
}

.input {
    background-color: rgba(237, 237, 237, 0.4);
    margin-left: 50rpx;
    height: 60rpx;
    border-radius: 30rpx;
}

.clear {
    position: absolute;
    right: 30rpx;
    top: 0;
    font-size: 32rpx;
    z-index: 10;
    color:  #999;
}

.cancel {
    width: 100rpx;
    text-align: center;
}

/* 设置placeholder元素的样式 */
.input-placeholder {
    color: #666;
    font-size: 28rpx;
    margin-left: 20rpx;
}

/* 搜索内容展示区域 */
.searchContent {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    color: purple;
    border-bottom: 1px solid purple;

}

.searchItem {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}

.searchItem .content {
    flex: 1;
    margin-left: 10rpx;
    border-bottom: 1px solid #eee;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/* 搜索历史记录 */
.historyContainer {
    position: relative;

    line-height: 50rpx;
}

.historyContainer .title {
    height: 50rpx;
    font-size: 26rpx;
}

.historyList {
    display: flex;
    /* 允许换行 */
    flex-wrap: wrap;

}

.historyItem {
    height: 50rpx;
    background-color: #ededed;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
}

.historyContainer .delete {
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
}


/* 热搜榜 */
.hotContainer .title {
    margin-top: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #eee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    line-height: 70rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0 10rpx;
}

.hotItem .iconImg {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}